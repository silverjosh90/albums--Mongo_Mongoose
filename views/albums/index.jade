extends ../layout
block content
  h2 Albums
  br
  a(href="/albums/new") New Albums

  br
  br
  table(class="table table-striped table-bordered")
    thead
        th Genre
        th Artist
        th Album
    tbody
      for album in albums
        tr
          td #{album.genre}
          td #{album.artist}
          td
            a(href="/albums/#{album._id}") #{album.album}
  br
  br
